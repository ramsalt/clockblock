<?php

drupal_add_css(drupal_get_path('module', 'worldclock') . '/css/worldclock.css', array('group' => CSS_DEFAULT, 'every_page' => TRUE));

/* hook_block_info */ 
function worldclock_block_info() {
  $blocks['clock'] = array(
    'info' => t('Worldclock'), 
    'cache' => DRUPAL_NO_CACHE,
  );
  return $blocks;
}

